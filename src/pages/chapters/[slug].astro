import {
    getChapterBySlug,
    getChapterSlugs,
    getChapters,
    getAssetUrl,
    type Chapter,
} from "../../lib/directus";

// Generate static paths for all published chapters
export async function getStaticPaths() {
    const slugs = await getChapterSlugs();
    return slugs.map((slug) => ({
        params: { slug },
    }));
}

const { slug } = Astro.params;
const chapter = await getChapterBySlug(slug!);

// Get all chapters for navigation
const allChapters = await getChapters();
const currentIndex = allChapters.findIndex((ch) => ch.slug === slug);
const prevChapter = currentIndex > 0 ? allChapters[currentIndex - 1] : null;
const nextChapter =
    currentIndex < allChapters.length - 1
        ? allChapters[currentIndex + 1]
        : null;

if (!chapter) {
    return Astro.redirect("/chapters");
}
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{chapter.title}</title>
        <style>
            body {
                font-family:
                    system-ui,
                    -apple-system,
                    sans-serif;
                line-height: 1.8;
                max-width: 800px;
                margin: 0 auto;
                padding: 2rem;
                color: #333;
            }
            .back-link {
                display: inline-block;
                margin-bottom: 2rem;
                color: #3498db;
                text-decoration: none;
                font-weight: 500;
            }
            .back-link:hover {
                text-decoration: underline;
            }
            .chapter-header {
                border-bottom: 3px solid #3498db;
                padding-bottom: 1rem;
                margin-bottom: 2rem;
            }
            .chapter-number {
                color: #7f8c8d;
                font-size: 0.9rem;
                font-weight: 600;
                text-transform: uppercase;
                margin-bottom: 0.5rem;
            }
            h1 {
                color: #2c3e50;
                margin: 0;
                font-size: 2.5rem;
            }
            .chapter-meta {
                color: #7f8c8d;
                font-size: 0.9rem;
                margin-top: 1rem;
            }
            .chapter-content {
                font-size: 1.1rem;
                margin: 2rem 0;
            }
            .chapter-content :global(h2) {
                color: #2c3e50;
                margin-top: 2rem;
                margin-bottom: 1rem;
            }
            .chapter-content :global(h3) {
                color: #34495e;
                margin-top: 1.5rem;
                margin-bottom: 0.75rem;
            }
            .chapter-content :global(p) {
                margin: 1rem 0;
            }
            .chapter-content :global(img) {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
                margin: 2rem 0;
            }
            .chapter-content :global(ul),
            .chapter-content :global(ol) {
                margin: 1rem 0;
                padding-left: 2rem;
            }
            .chapter-content :global(li) {
                margin: 0.5rem 0;
            }
            .chapter-content :global(blockquote) {
                border-left: 4px solid #3498db;
                padding-left: 1.5rem;
                margin: 1.5rem 0;
                color: #555;
                font-style: italic;
            }
            .chapter-content :global(code) {
                background: #f8f9fa;
                padding: 0.2rem 0.4rem;
                border-radius: 4px;
                font-size: 0.9em;
                font-family: "Courier New", monospace;
            }
            .chapter-content :global(pre) {
                background: #f8f9fa;
                padding: 1rem;
                border-radius: 8px;
                overflow-x: auto;
            }
            .chapter-content :global(pre code) {
                background: none;
                padding: 0;
            }
            .chapter-images {
                margin: 2rem 0;
            }
            .chapter-images img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
                margin: 1rem 0;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }
            .chapter-navigation {
                display: flex;
                justify-content: space-between;
                margin-top: 3rem;
                padding-top: 2rem;
                border-top: 2px solid #ecf0f1;
            }
            .nav-link {
                display: flex;
                flex-direction: column;
                text-decoration: none;
                color: #2c3e50;
                padding: 1rem;
                background: #f8f9fa;
                border-radius: 8px;
                transition:
                    transform 0.2s,
                    box-shadow 0.2s;
                max-width: 45%;
            }
            .nav-link:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            .nav-link.prev {
                align-items: flex-start;
            }
            .nav-link.next {
                align-items: flex-end;
                text-align: right;
            }
            .nav-label {
                font-size: 0.85rem;
                color: #7f8c8d;
                text-transform: uppercase;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }
            .nav-title {
                font-weight: 600;
                color: #3498db;
            }
        </style>
    </head>
    <body>
        <a href="/chapters" class="back-link">← All Chapters</a>

        <article>
            <header class="chapter-header">
                <div class="chapter-number">Chapter {chapter.order}</div>
                <h1>{chapter.title}</h1>
                <div class="chapter-meta">
                    Last updated: {
                        new Date(chapter.date_updated).toLocaleDateString()
                    }
                </div>
            </header>

            <div class="chapter-content" set:html={chapter.content} />

            {
                chapter.images && chapter.images.length > 0 && (
                    <div class="chapter-images">
                        {chapter.images.map((image: any) => (
                            <img
                                src={getAssetUrl(
                                    image.directus_files_id ||
                                        image.id ||
                                        image,
                                )}
                                alt={`Image from ${chapter.title}`}
                            />
                        ))}
                    </div>
                )
            }
        </article>

        <nav class="chapter-navigation">
            {
                prevChapter ? (
                    <a
                        href={`/chapters/${prevChapter.slug}`}
                        class="nav-link prev"
                    >
                        <span class="nav-label">← Previous</span>
                        <span class="nav-title">{prevChapter.title}</span>
                    </a>
                ) : (
                    <div />
                )
            }

            {
                nextChapter ? (
                    <a
                        href={`/chapters/${nextChapter.slug}`}
                        class="nav-link next"
                    >
                        <span class="nav-label">Next →</span>
                        <span class="nav-title">{nextChapter.title}</span>
                    </a>
                ) : (
                    <div />
                )
            }
        </nav>
    </body>
</html>
